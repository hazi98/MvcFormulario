@model MvcFormulario.Models.Formulario

@{
    ViewData["Title"] = "Create";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
		<script>
			$(document).ready(function(){
				
				$('#Game').on('change', function(){
					var juego = $(this).val();
					alert("va bien");
					if(juego){
						$.ajax({
							type:'POST', 
							url:'personajes.php',
							data: 'juego='+juego,
							success: function(html){
								$('#Characters').html(html);
								alert(html);
							}
						});
					}//if
					else{
						$('#Game').html('(Seleccione primero el estado)');
					}//else
				});
			});
        </script>    
</head>
<h1>Create</h1>

<h4>Formulario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gamertag" class="control-label"></label>
                <input asp-for="Gamertag" class="form-control" />
                <span asp-validation-for="Gamertag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Servername" class="control-label"></label>
                <input asp-for="Servername" class="form-control" />
                <span asp-validation-for="Servername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label><br>
                <input type="radio" checked id ="male" name="gender" value="male" class=".btn-info ratio" asp-for="Gender"  />
                <label for="male">Male</label><br>
                <input type="radio" id="female" name="gender" value="female" class="ratio" asp-for="Gender">
                <label for="female">Female</label><br>
                <input type="radio" id="other" name="gender" value="other" class="ratio" asp-for="Gender">
                <label for="other">Other</label>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game" class="control-label"></label>
                 <select id="Game" asp-for="Game" class="btn btn-default dropdown-toggle">
                    <option value="">(Seleccione un juego)</option>
                    <option value="lol">League of Legends</option>
                    <option value="overwatch">Overwatch</option>
                    <option value="codm">COD Movil</option>
                    <option value="valorant">Valorant</option>
                </select>
                <span asp-validation-for="Game" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Character" class="control-label"></label>
                <select id="Characters" asp-for="Game" class="btn btn-default dropdown-toggle">
                    <option value="">(Seleccione primero un juego)</option>
                </select >
                <span asp-validation-for="Character" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CDivision" class="control-label"></label>
                <input asp-for="CDivision" class="form-control" />
                <span asp-validation-for="CDivision" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ODivision" class="control-label"></label>
                <input asp-for="ODivision" class="form-control" />
                <span asp-validation-for="ODivision" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PremiumService" /> @Html.DisplayNameFor(model => model.PremiumService)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
